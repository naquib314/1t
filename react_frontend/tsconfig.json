{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../depmap/static/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es6", "es2017", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./src/tests/*",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.fixture.ts",
    "./src/**/*.fixture.tsx",
    "./shared/**/*.test.ts",
    "./shared/**/*.test.tsx"
  ]
}
